  "configurations": [
    {
      "name": "Debug ts-node (Current File)",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "npx",
      "runtimeArgs": [
        "ts-node",
        "--project",
        "./tsconfig.testing.json",
